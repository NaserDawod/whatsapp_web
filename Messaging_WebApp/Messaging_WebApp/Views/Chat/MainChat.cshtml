@model temp
@{
    Layout = "_Chat";
}
<script type="text/javascript"> change('@Model.token') </script>
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Add Contacts</h5>
            <button type="button" @*onclick="hide()"*@ class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Username:</label>
                <input type="text" class="form-control" id="Username" onfocus="this.value='';">
                <label for="recipient-name" class="col-form-label">Name:</label>
                <input type="text" class="form-control" id="Name" onfocus="this.value='';">
                <label for="recipient-name" class="col-form-label">Server:</label>
                <input type="text" class="form-control" id="Server" onfocus="this.value='';">
            </div>
            <script type="text/javascript">
                const wage = document.getElementById('Username');
                    wage.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter') {
                            addContact2();
                        }
                    });
            </script>
            <p class="message wrong" id="n-exist">this user dosnt exist</p>
            <p class="message wrong" id="n-exist2">this user is already in your contacts</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="hide()">Close</button>
            <button type="button" class="btn btn-primary" onclick="addContact2('@Model')" >Understood</button>
        </div>
        </div>
    </div>
</div>
<div class="row container-fluid">
    <div class="col-4 right-pad" style="border-right: 0.2vh solid lightgray;">
        <div id="main-user" class="bg-light" style="width: 100%;"> 
            <script type="text/javascript"> printUser() </script>  
        </div>
        <div id="search">
            <form class="form-s" role="search" id="form">
                <input class="input-s" @*onkeyup="search()"*@ type="text" id="search-bar" name="q" placeholder="Search..." >
                <div class="button-s">
                    <svg class="svg-s" viewBox="0 0 1024 1024">
                        <path class="path1" d="M848.471 928l-263.059-263.059c-48.941 36.706-110.118 55.059-177.412 55.059-171.294 0-312-140.706-312-312s140.706-312 312-312c171.294 0 312 140.706 312 312 0 67.294-24.471 128.471-55.059 177.412l263.059 263.059-79.529 79.529zM189.623 408.078c0 121.364 97.091 218.455 218.455 218.455s218.455-97.091 218.455-218.455c0-121.364-103.159-218.455-218.455-218.455-121.364 0-218.455 97.091-218.455 218.455z"></path>
                    </svg>
                </div>
            </form>
        </div>

        <div id="contact_div" class="table-wrapper-scroll-y my-custom-scrollbar">
            @*<button onclick="getUser()">fetch</button>*@
            <script type="text/javascript"> printContacts2() </script>
        </div>

    </div>
    <div class="col-8 left-pad" id="messages">
        <div class="row home h-100 align-items-center">
        <div class="centered">
            <img class="centert" src="~/Images/whatsicon.png" height="170px" alt="">
            <h4 class="wellcome centert2">Wellcome to whats app web app!! </h4>
        </div>
        </div>
    </div>
</div>
